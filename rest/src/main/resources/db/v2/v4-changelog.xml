<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    
    <preConditions onFail="HALT">
        <dbms type="postgresql" />
    </preConditions>

    <changeSet id="1" author="Nick Rybak">
        <createTable tableName="SOCIAL_MEDIA">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"
                             unique="true"
                             primaryKey="true"
                             primaryKeyName="social_media_id" />
            </column>
            <column name="TARGET_USER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="TWITTER_PROFILE_ID" type="BIGINT">
                <constraints foreignKeyName="fk_twitter_profile_id"
                             references="twitter_profiles(id)" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>